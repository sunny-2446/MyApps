<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.AboutApp"
    android:background="#4475F6F2">

    <ImageView
        android:id="@+id/imgAboutIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/about_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtAboutApp"
        android:layout_below="@id/imgAboutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_app_details"
        android:textColor="#B30505"
        android:textSize="20sp"
        android:background="@drawable/text_boundary"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"/>

</RelativeLayout>